<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bibliothèque</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        /* Styles existants */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: #fff;
            padding: 20px;
        }

        .bibliotheque-container {
            background: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 800px;
            color: #333;
            position: relative;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 28px;
            color: #764ba2;
        }

        .search-bar {
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
        }

        .search-bar input {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 8px;
            width: 100%;
            max-width: 300px;
        }

        .livre {
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background: #f9f9f9;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .livre:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }

        .livre h2 {
            margin-bottom: 10px;
            font-size: 20px;
            color: #333;
        }

        .livre p {
            margin-bottom: 8px;
            font-size: 14px;
            color: #555;
        }

        .disponible {
            color: #28a745;
            font-weight: bold;
        }

        .emprunte {
            color: #dc3545;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="bibliotheque-container">
        <h1>Bibliothèque</h1>

        <!-- Barre de recherche -->
        <div class="search-bar">
            <input type="text" id="search-input" placeholder="Rechercher un livre..." oninput="rechercherLivre()">
        </div>

        <!-- Conteneur pour afficher les livres filtrés -->
        <div id="livre-list">
            <!-- Les détails des livres filtrés seront affichés ici -->
        </div>
    </div>

    <script>
        // Données des livres
        const livres = [
            { titre: "Le Seigneur des Anneaux", auteur: "J.R.R. Tolkien", genre: "Fantasy", annee: 1954, etat: "Disponible" },
            { titre: "1984", auteur: "George Orwell", genre: "Dystopie", annee: 1949, etat: "Emprunté" },
            { titre: "Le Petit Prince", auteur: "Antoine de Saint-Exupéry", genre: "Conte", annee: 1943, etat: "Disponible" },
        ];

        // Afficher tous les livres au départ
        function afficherLivres(livresFiltres) {
            const livreList = document.getElementById('livre-list');
            livreList.innerHTML = livresFiltres.map(livre => `
                <div class="livre">
                    <h2>${livre.titre}</h2>
                    <p><strong>Auteur :</strong> ${livre.auteur}</p>
                    <p><strong>Genre :</strong> ${livre.genre}</p>
                    <p><strong>Année de publication :</strong> ${livre.annee}</p>
                    <p><strong>État :</strong> 
                        <span class="${livre.etat === 'Disponible' ? 'disponible' : 'emprunte'}">${livre.etat}</span>
                    </p>
                </div>
            `).join('');
        }

        // Fonction de recherche
        function rechercherLivre() {
            const query = document.getElementById('search-input').value.toLowerCase();
            const livresFiltres = livres.filter(livre =>
                livre.titre.toLowerCase().includes(query) ||
                livre.auteur.toLowerCase().includes(query) ||
                livre.genre.toLowerCase().includes(query)
            );
            afficherLivres(livresFiltres);
        }

        // Initialisation : afficher tous les livres
        afficherLivres(livres);
    </script>
</body>
</html>
