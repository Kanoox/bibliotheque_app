<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bibliothèque</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        /* Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: #fff;
            padding: 20px;
        }

        .bibliotheque-container {
            background: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 800px;
            color: #333;
            position: relative;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 28px;
            color: #764ba2;
        }

        .mon-compte {
            position: absolute;
            top: 20px;
            right: 20px;
        }

        .mon-compte button {
            padding: 10px 20px;
            font-size: 14px;
            font-weight: bold;
            color: #fff;
            background: #764ba2;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.2s;
        }

        .mon-compte button:hover {
            background: #5a3d7a; /* Couleur légèrement plus foncée */
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1); /* Ajout d'une ombre douce */
            transform: translateY(-1px); /* Légère élévation du bouton */
        }

        .select-livre {
            margin-bottom: 20px;
            display: flex;
            justify-content: center;
        }

        select {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 8px;
            width: 100%;
            max-width: 300px;
        }

        .livre {
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background: #f9f9f9;
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .livre:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }

        .livre h2 {
            margin-bottom: 10px;
            font-size: 20px;
            color: #333;
        }

        .livre p {
            margin-bottom: 8px;
            font-size: 14px;
            color: #555;
        }

        .disponible {
            color: #28a745;
            font-weight: bold;
        }

        .emprunte {
            color: #dc3545;
            font-weight: bold;
        }
        .logout {
            position: absolute;
            top: 20px;
            left: 20px;
        } 

        .logout button {
            padding: 10px 20px;
            font-size: 14px;
            font-weight: bold;
            color: #fff;
            background: #764ba2;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
        }

        .logout button:hover {
            background: #5a3d7a; /* Couleur légèrement plus foncée */
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1); /* Ajout d'une ombre douce */
            transform: translateY(-1px); /* Légère élévation du bouton */
        }

        
    </style>
</head>
<body>
    <div class="bibliotheque-container">
        <!-- Bouton Mon Compte -->
        <div class="mon-compte">
            <button onclick="ouvrirMonCompte()">Mon compte</button>
        </div>

        <div class="logout">
            <button onclick="deconnexion()">Déconnexion</button>
        </div>

        <h1>Bibliothèque</h1>

        <!-- Liste déroulante -->
        <div class="select-livre">
            <select id="livre-select" onchange="afficherLivre()">
                <option value="0">Sélectionnez un livre</option>
                <option value="1">Le Seigneur des Anneaux</option>
                <option value="2">1984</option>
                <option value="3">Le Petit Prince</option>
            </select>
        </div>

        <!-- Conteneur pour afficher le livre sélectionné -->
        <div id="livre-details">
            <!-- Les détails des livres seront affichés ici -->
        </div>
    </div>

    <script>
        // Données des livres
        const livres = [
            {
                titre: "Le Seigneur des Anneaux",
                auteur: "J.R.R. Tolkien",
                genre: "Fantasy",
                annee: 1954,
                etat: "Disponible"
            },
            {
                titre: "1984",
                auteur: "George Orwell",
                genre: "Dystopie",
                annee: 1949,
                etat: "Emprunté"
            },
            {
                titre: "Le Petit Prince",
                auteur: "Antoine de Saint-Exupéry",
                genre: "Conte",
                annee: 1943,
                etat: "Disponible"
            }
        ];

        // Fonction pour afficher les détails du livre
        function afficherLivre() {
            const select = document.getElementById('livre-select');
            const livreIndex = select.value - 1;
            const livreDetails = document.getElementById('livre-details');

            if (livreIndex >= 0) {
                const livre = livres[livreIndex];
                livreDetails.innerHTML = `
                    <div class="livre">
                        <h2>${livre.titre}</h2>
                        <p><strong>Auteur :</strong> ${livre.auteur}</p>
                        <p><strong>Genre :</strong> ${livre.genre}</p>
                        <p><strong>Année de publication :</strong> ${livre.annee}</p>
                        <p><strong>État :</strong> 
                            <span class="${livre.etat === 'Disponible' ? 'disponible' : 'emprunte'}">${livre.etat}</span>
                        </p>
                    </div>
                `;
            } else {
                livreDetails.innerHTML = ''; // Vider les détails si aucun livre n'est sélectionné
            }
        }

        // Fonction pour ouvrir la section Mon Compte
        function ouvrirMonCompte() {
            window.location.href = "/dashboard";
        }

        function deconnexion(){
            window.location.href = "/logout";
        }
    </script>
</body>
</html>
