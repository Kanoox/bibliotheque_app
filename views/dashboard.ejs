<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mon Compte</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;700&display=swap" rel="stylesheet">
    <style>
        /* Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: #fff;
            padding: 20px;
        }

        .dashboard-container {
            background: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 600px;
            color: #333;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 28px;
            color: #764ba2;
        }

        .info {
            margin-bottom: 20px;
        }

        .info p {
            margin-bottom: 10px;
            font-size: 16px;
        }

        .info p span {
            font-weight: bold;
            color: #764ba2;
        }

        .btn-retour {
            display: flex;
            justify-content: center;
            margin-top: 20px;
            flex-wrap: wrap;
        }

        .btn-retour button {
            padding: 10px 20px;
            font-size: 14px;
            font-weight: bold;
            color: #fff;
            background: #764ba2;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.2s;
            margin: 5px;
        }

        .btn-retour button:hover {
            background: #5a3d7a;
        }

        .btn-supprimer {
            background: #e74c3c;
        }

        .btn-supprimer:hover {
            background: #c0392b;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <h1>My account</h1>

        <div class="info">
            <p><span>First Name : </span><%= user.prenom ? user.prenom : "Non défini" %></p>
            <p><span>Last Name : </span><%= user.nom ? user.nom : "Non défini" %></p>
            <p><span>Adress : </span><%= user.adresse ? user.adresse : "Non défini" %></p>
            <p><span>Tel : </span><%= user.telephone ? user.telephone : "Non défini" %></p>
            <p><span>Mail : </span><%= user.mail ? user.mail : "Non défini" %></p>
            <p><span>Rôle : </span><%= user.role ? user.role : "Non défini" %></p>
            <p><span>Username : </span><%= user.username ? user.username : "Non défini" %></p>
        </div>

        <div class="btn-retour">
            <button onclick="retourBibliotheque()">Back to the library</button>
            <button onclick="modifierDonnees()">Edit my infos</button>
            <button class="btn-supprimer" onclick="supprimerCompte()">Delete my account</button>
        </div>
    </div>

    <script>
        // Fonction pour revenir à la page bibliothèque
        function retourBibliotheque() {
            window.location.href = "/";
        }

        // Fonction pour modifier les données de l'utilisateur
        function modifierDonnees() {
            window.location.href = "/edit_profil";
        }

        // Fonction pour supprimer le compte de l'utilisateur
        function supprimerCompte() {
            const confirmation = confirm("Êtes-vous sûr de vouloir supprimer votre compte ? Cette action est irréversible.");
            if (confirmation) {
                // Redirige vers une route backend pour supprimer le compte
                window.location.href = "/delete_account";
            }
        }
    </script>
</body>
</html>
